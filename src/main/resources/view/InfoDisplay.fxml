<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="infoDisplay" styleClass="info-display"
      alignment="CENTER"
      prefHeight="300.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <ImageView fx:id="appIcon" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"/>
    <Label fx:id="statusString" wrapText="true" textAlignment="CENTER"/>
</VBox>
